.bg-squared::before {
    z-index: -1;
    content: " ";
    position: absolute;
    top: 0;
    left: 0;
    height: 80vh;
    width: 100%;
    background: linear-gradient(-180deg, rgba(241, 245, 248, 0) 0%, rgba(241, 245, 248, 1) 100%), url("../images/squares.svg") repeat center center;
}

body > header {
    height: 65vh;
